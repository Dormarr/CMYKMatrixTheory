<Window x:Class="WPFImageGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFImageGen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid Width="400">
        <Image x:Name="MainImage" HorizontalAlignment="Stretch" Height="240" VerticalAlignment="Stretch" Width="240"/>
        <Label x:Name="lblText" Content="Label" HorizontalAlignment="Left" Width="174" Height="26" Margin="33,49,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Margin="33,26,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="236"/>
        <Button x:Name="btnGenerate" Content="Generate" HorizontalAlignment="Left" Margin="284,26,0,0" VerticalAlignment="Top" Width="88" Click="btnGenerate_Click"/>
        <Image x:Name="OverlayImage" Height="240" Width="240" Margin="80,97,80,97"/>
        <Button x:Name="btnDownload" Content="Download" HorizontalAlignment="Stretch" Margin="54,0,0,12" VerticalAlignment="Bottom" Width="124" Click="btnDownload_Click"/>

    </Grid>
</Window>
